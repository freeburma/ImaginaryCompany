@model ImaginaryCompany.Models.Category;

@{
    ViewData["Title"] = "Delete Product Page";
}



<div class="container">
    <div class="col-md-6">
        <h5 class="text-info">Category</h5>
        <p class="text-danger">
            Are you sure, you want to delete this category?
            If you have assigned this category to any products, you may get an error.
            Remove the any products assign to this category.
        </p>

        <div class="row">
            <table class="table col-md-6">
                <tbody>
                    <tr>
                        <td>Id</td>
                        <td>@Model.CategoryId</td>
                    </tr>

                    <tr>
                        <td>Name</td>
                        <td>@Model.CategoryName</td>
                    </tr>


                </tbody>
            </table>
        </div>
    </div>


    <div class="row">

        <form asp-controller="Company" asp-action="DeleteCategory" method="post">
            <input type="hidden" asp-for="@Model.CategoryId" />
            <input type="submit" class="btn btn-danger" value="Delete Category" />

            <span style="margin-right: 20px;"></span>
            <a class="btn btn-outline-info" asp-controller="Company" asp-action="ProductList">Cancel</a>
        </form>
    </div>
    <br />
</div>

