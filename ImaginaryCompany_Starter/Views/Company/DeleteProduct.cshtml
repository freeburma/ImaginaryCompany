@model ImaginaryCompany_Starter.ViewModels.ProductViewModel;

@{
    ViewData["Title"] = "Delete Product Page";
}



<div class="container">
    <div class="col-md-12">
        <h5 class="text-info">Products</h5>
        <p class="text-danger">Are you sure, you want to delete this product?</p>

        <div class="row">
            <table class="table col-md-6">
                <tbody>
                    <tr>
                        <td>Id</td>
                        <td>@Model.Product.ProductId</td>
                    </tr>

                    <tr>
                        <td>ProductName</td>
                        <td>@Model.Product.ProductName</td>
                    </tr>

                    <tr>
                        <td>Quantity</td>
                        <td>@Model.Product.Quantity</td>
                    </tr>

                    <tr>
                        <td>Price</td>
                        <td>@Model.Product.Price</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <div class="row">

        <form asp-controller="Company" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Product.ProductId" />
            <input type="submit" class="btn btn-danger" value="Delete Product" />
            
            <span style="margin-right: 20px;"></span>
            <a class="btn btn-outline-info" asp-controller="Company" asp-action="ProductList">Cancel</a>
        </form>
    </div>
    <br />
</div>

